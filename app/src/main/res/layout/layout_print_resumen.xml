<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="energigas.apps.systemstrategy.energigas.activities.PrintDispatch">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <include layout="@layout/layout_content_print_resumen" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabDisconec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/print_margin_bottom_fab_3"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:visibility="invisible"
        app:backgroundTint="@color/colorAccent"
        app:elevation="@dimen/print_elevation_fab"
        app:pressedTranslationZ="@dimen/print_translation_z"
        android:src="@drawable/ic_printer_sync_disconnect" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/print_margin_bottom_fab_2"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:visibility="invisible"
        app:elevation="@dimen/print_elevation_fab"
        app:backgroundTint="@color/greem_background_item"
        app:pressedTranslationZ="@dimen/print_translation_z"
        android:src="@drawable/ic_printer_tool" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:elevation="@dimen/print_elevation_fab"
        app:backgroundTint="@color/colorAccent"
        android:layout_margin="@dimen/fab_margin"
        app:layout_behavior="energigas.apps.systemstrategy.energigas.adapters.FABScrollBehavior"
        android:src="@drawable/ic_printer_sync_print" />



</android.support.design.widget.CoordinatorLayout>
