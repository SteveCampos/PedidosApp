<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/text_station_dispatch_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GLP 500 GAL - TANK 5621652248"
            android:layout_toStartOf="@+id/text_station_dispatch_requested_quantity"
            style="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/text_station_dispatch_requested_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300.00 GAL"
            android:layout_alignParentEnd="true"
            style="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:id="@+id/text_station_dispatch_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POR ATENDER"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            style="@style/TextAppearance.AppCompat.Caption"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>
