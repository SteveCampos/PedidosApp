<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/text_order_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GLP"
            android:layout_toStartOf="@+id/text_order_detail_quantity"
            style="@style/TextAppearance.AppCompat.Large"
            />

        <TextView
            android:id="@+id/text_order_detail_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300 GALONES"
            android:layout_alignParentEnd="true"
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:id="@+id/text_order_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CON IGV: S/. 4. 7200 \nSIN IGV:   S/. 4. 0000"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_below="@+id/text_order_detail_title"
            />


        <TextView
            android:id="@+id/text_order_detail_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/. 11 800 .00"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_alignBottom="@+id/text_order_detail_price"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</android.support.v7.widget.CardView>