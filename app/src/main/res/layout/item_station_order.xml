<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/text_station_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PEDIDO 1001"
            android:layout_toStartOf="@+id/text_station_product_quantity"
            style="@style/TextAppearance.AppCompat.Large"
            />

        <TextView
            android:id="@+id/text_station_order_programed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Martes 16"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDIENTE"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/text_station_order_programed_date"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>