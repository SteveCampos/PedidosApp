<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/your_nav_view_id"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navheader_height"
    android:background="@color/colorPrimary_light"
    android:orientation="vertical"
    android:padding="@dimen/md_keylines">

    <TextView

        android:id="@+id/textInforEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:gravity="center"
        android:text="@string/header_energigas"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/button_grey"
        android:textSize="@dimen/dimen_10dp" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imgPerfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@color/background_color"
        app:placeholderImage="@drawable/ic_loader"
        app:roundAsCircle="true"
        app:roundingBorderWidth="1dp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/estable_default_description"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textCorreoAgente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="kelvinthony@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/button_grey" />

    <TextView
        android:id="@+id/textNombreAgente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textCorreoAgente"
        android:layout_alignParentStart="true"
        android:text="Kelvin thony meza espiritu"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/button_grey" />


</RelativeLayout>