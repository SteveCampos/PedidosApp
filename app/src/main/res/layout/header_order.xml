<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_bar_height_order"
    android:layout_marginTop="32dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


                <ImageView
                    android:id="@+id/imageViewStation"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/estable_default_description"
                    android:src="@drawable/gas_station_b"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp" />

                <LinearLayout
                    android:id="@+id/idLinear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/imageViewStation"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/imageViewStation">

                    <TextView
                        android:id="@+id/txtproducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/estable_default_name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                        
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/estable_default_address"
                            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                            android:id="@+id/txtaddress"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtclock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_reloj"
                            android:drawableTint="@color/grey_400"
                            android:gravity="center"
                            android:text="@string/estable_default_description"
                            android:textAppearance="@style/TextViewSmall"
                            android:drawableLeft="@drawable/ic_reloj" />

                        <TextView
                            android:id="@+id/txtlocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_marker"
                            android:drawableTint="@color/grey_400"
                            android:gravity="center"
                            android:text="@string/estable_default_marker"
                            android:textAppearance="@style/TextViewSmall"
                            android:drawableLeft="@drawable/ic_marker" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>