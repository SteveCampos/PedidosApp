                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:layout_weight="0"
                        android:text=" FECHA :"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_dispatch_fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00/00/00"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/et_resp_hora_iniciofin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/print_resp_dispatch_hora_inicio_fin"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/et_body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/print_info_dispatch_body1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/et_resp_body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
