<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cardResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_summary_title"
                    android:background="@color/greem_background_item"
                    android:orientation="vertical"
                    android:padding="@dimen/card_margin">

                    <TextView
                        android:id="@+id/text_estabsslinshment_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resumen"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_title_summary"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/height_item_summary"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_layout">

                        <TextView
                            android:id="@+id/aa"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Saldo Inicial :"
                            android:textSize="@dimen/size_text_item"
                            android:typeface="monospace" />

                        <TextView
                            android:id="@+id/textSaldoInicial"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_rigth"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:text="S/. 1000.00"
                            android:textSize="@dimen/size_text_item"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_view"
                        android:layout_marginLeft="@dimen/margin_left_and_rigth"
                        android:layout_marginRight="@dimen/margin_left_and_rigth"
                        android:background="@color/colorPrimaryDark" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_layout">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textIngresos"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ingresos Totales : "
                                android:textSize="@dimen/size_text_item"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/textIngresosTotales"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_rigth"
                                android:layout_weight="2"
                                android:gravity="right"
                                android:text="S/. 1000.00"
                                android:textSize="@dimen/size_text_item"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <TextView
                                android:id="@+id/textDetalleItemTotales"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/table_row"
                                android:layout_marginRight="@dimen/table_row"
                                android:layout_marginTop="@dimen/margin_top_layout"
                                android:gravity="center"

                                android:text="@string/text_detalle_ingresos"
                                android:textSize="@dimen/text_sub_item"
                                android:textStyle="italic" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_view"
                        android:layout_marginLeft="@dimen/margin_left_and_rigth"
                        android:layout_marginRight="@dimen/margin_left_and_rigth"
                        android:background="@color/colorPrimaryDark" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/height_item_summary"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_layout">

                        <TextView
                            android:id="@+id/hjgk"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gatos : "
                            android:textSize="@dimen/size_text_item"

                            android:typeface="monospace" />

                        <TextView
                            android:id="@+id/textTotalGastos"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_rigth"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:text="S/. 1000.00"
                            android:textSize="@dimen/size_text_item"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_view"
                        android:background="@color/line_last_view" />

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/height_item_summary"
                        android:background="#bdbdbd"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_layout">

                        <TextView
                            android:id="@+id/ggggg"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Efectivo a rendir :"
                            android:textSize="@dimen/size_text_item"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textEfectivoRendir"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_rigth"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:text="S/. 1000.00"
                            android:textSize="@dimen/size_text_item"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cardIngresos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_summary_title"
                    android:background="@color/greem_background_item"
                    android:orientation="vertical"
                    android:padding="@dimen/card_margin">

                    <TextView
                        android:id="@+id/ment_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingresos"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_title_summary"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/tableLayoutIngresos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_rigth"
                        android:shrinkColumns="*"
                        android:stretchColumns="*">


                    </TableLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_color">

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cardCostos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_summary_title"
                    android:background="@color/greem_background_item"
                    android:orientation="vertical"
                    android:padding="@dimen/card_margin">

                    <TextView
                        android:id="@+id/text_establishment_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Costos"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_title_summary"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/tablayoutGastos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_rigth"
                        android:shrinkColumns="*"
                        android:stretchColumns="*">

                    </TableLayout>


                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>


    <!--<ListView

        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@color/white"
        android:dividerHeight="@dimen/dimen_10dp" />-->

</android.support.v4.widget.NestedScrollView>
