<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:visibility="invisible">


        <TextView
            android:id="@+id/textMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ABRIL"
            android:textColor="@color/colorAccent"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textMes"
            android:gravity="center"
            android:text="25"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textAnno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDia"
            android:gravity="center"
            android:text="2016"
            android:textColor="#A7A7A6"
            android:textSize="8dp" />


    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="#CECECE"
        android:foregroundGravity="right"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.9"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textDiaString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BSC DE LA SEMANA"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_weight="1.5"

        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Eficacia venta"
            android:textSize="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Capacidad Unidad"
            android:textSize="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Eficacia Atencion"
            android:textSize="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Demanda insatisfecha"
            android:textSize="5dp" />

    </LinearLayout>
</LinearLayout>
