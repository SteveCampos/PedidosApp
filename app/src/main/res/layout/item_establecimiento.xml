<android.support.constraint.LinearConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        style="@style/categoriesCardViewButtons"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/estable_default_description"
                android:src="@drawable/gas_station_b" />

            <LinearLayout
                android:id="@+id/idLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/imageView2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtnombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estable_default_name"
                    android:textAppearance="@style/TextViewTitle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estable_default_address"
                    android:textAppearance="@style/TextViewMedium"
                    />

                <TextView
                    android:id="@+id/txtdescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estable_default_description"
                    android:drawablePadding="8dp"
                    android:textAppearance="@style/TextViewSmall"
                    android:drawableStart="@drawable/ic_reloj"
                    android:drawableTint="@color/grey_400"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/txtubicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estable_default_marker"
                    android:textAppearance="@style/TextViewSmall"
                    android:drawableStart="@drawable/ic_marker"
                    android:drawableTint="@color/grey_400"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    />

                <RatingBar
                    android:id="@+id/rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:isIndicator="true"
                    android:progressTint="@color/colordorado"
                    android:rating="3" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/BtnBoton"
                style="@style/AppTheme.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/estable_action_attend" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.LinearConstraintLayout>