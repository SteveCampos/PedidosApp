                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:clickable="true"
                        android:visibility="invisible"
                        app:fabSize="mini"
                        app:pressedTranslationZ="@dimen/print_translation_z"
