                    android:id="@+id/imgIniciarDespacho"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/ic_gas_white" />
            </LinearLayout>

            <LinearLayout
