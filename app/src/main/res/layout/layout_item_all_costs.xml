<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_summary_title"
            android:background="@color/greem_background_item"
            android:orientation="vertical"
            android:padding="@dimen/card_margin">

            <TextView
                android:id="@+id/text_establishment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costos"
                android:textColor="@color/white"
                android:textSize="@dimen/size_title_summary"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tableLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_rigth"
                android:shrinkColumns="*"
                android:stretchColumns="*">



                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/a1"
                        android:text=""/>



                    <TextView
                        android:id="@+id/TextView01"
                        android:text="Ruta"
                        android:layout_marginRight="@dimen/margin_rigth"
                        android:textSize="@dimen/size_text_item"
                        android:gravity="right"
                        android:textStyle="bold"/>

                </TableRow>

                <TableRow
                    android:id="@+id/a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/a3"
                        android:text="Boletas cobradas"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/margin_rigth"
                        android:textSize="@dimen/size_text_item"
                        android:textStyle="bold"/>





                    <TextView
                        android:id="@+id/a7"
                        android:textSize="@dimen/size_text_item"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/size_title_summary"
                        android:text="5"/>


                </TableRow>



                <TableRow
                    android:id="@+id/abc2"
                    android:background="@color/background_color"
                    android:layout_marginTop="@dimen/margin_rigth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/abc3"
                        android:text="Total"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/margin_rigth"
                        android:textSize="@dimen/size_text_item"
                        android:textStyle="bold"/>





                    <TextView
                        android:id="@+id/abc7"
                        android:textSize="@dimen/size_text_item"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/size_title_summary"
                        android:textColor="@color/black"
                        android:text="5"/>


                </TableRow>

            </TableLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
