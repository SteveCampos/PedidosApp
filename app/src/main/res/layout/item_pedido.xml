<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/text_station_order_title"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/text_station_order_quantity"
            android:text="GLP" />

        <TextView
            android:id="@+id/text_station_order_quantity"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:text="300 GALONES"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/text_station_order_scope"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_station_order_title"
            android:text="SCOP: SS" />

        <TextView
            android:id="@+id/text.station.numero.pedidos"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_station_order_scope"
            android:textStyle="italic|bold"
            android:textSize="@dimen/dimen_10dp"
            android:text="NumeroPedidos" />

        <TextView
            android:id="@+id/horarioAtencion"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text.station.numero.pedidos"
            android:text="Horario: 21:00"
            android:textSize="@dimen/dimen_10dp"
            android:textStyle="italic|bold" />

        <!--<TextView-->
            <!--android:id="@+id/text_station_order_state"-->
            <!--style="@style/TextAppearance.AppCompat.Small"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/horarioAtencion"-->
            <!--android:text="EN PROCESO" />-->

        <TextView
            android:id="@+id/text.station.fecha.entrega"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horarioAtencion"
            android:textStyle="italic|bold"
            android:textSize="@dimen/dimen_10dp"
            android:text="Fecha Entrega" />

        <TextView
            android:id="@+id/text_station_order_state"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text.station.fecha.entrega"
            android:layout_alignParentEnd="true"
            android:text="EN PROCESO"
            android:textSize="@dimen/dimen_12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textPrecio"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S./ 3.65"
            android:textSize="12dp"
            android:textStyle="italic"
            android:layout_above="@+id/text.station.fecha.entrega"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</android.support.v7.widget.CardView>