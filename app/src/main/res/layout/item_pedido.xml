<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/text_station_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GLP"
            android:layout_toStartOf="@+id/text_station_order_quantity"
            style="@style/TextAppearance.AppCompat.Large"
            />

        <TextView
            android:id="@+id/text_station_order_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300 GALONES"
            android:layout_alignParentEnd="true"
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorAccent"
            android:gravity="right" />

        <TextView
            android:id="@+id/text_station_order_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="84399786"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_below="@+id/text_station_order_title"
            />

        <TextView
            android:id="@+id/text_station_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EN PROCESO"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/text_station_order_scope"
            />

        <TextView
            android:id="@+id/text_station_order_programed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Martes 16"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_alignBottom="@+id/text_station_order_state"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</android.support.v7.widget.CardView>