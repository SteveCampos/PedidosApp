<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/txt.ordencargo.subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanque 1"
            android:layout_toStartOf="@+id/txt.ordencargo.title"
            style="@style/TextAppearance.AppCompat.Title"
            />

        <TextView
            android:id="@+id/txt.ordencargo.date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INFORMATION DESPACHO:"
            android:layout_below="@+id/txt.ordencargo.subtitle"
            style="@style/TextAppearance.AppCompat.Caption"
            />

        <TextView
            android:id="@+id/txt.ordencargo.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300.00 GAL"
            android:layout_alignParentEnd="true"
            style="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorAccent"
            />
        <!--<TextView
            android:id="@+id/text_dispatch_state"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESPACHADO"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_dispatch_requested_quantity"
            style="@style/TextAppearance.AppCompat.Caption"
            />-->

    </RelativeLayout>


</android.support.v7.widget.CardView>
